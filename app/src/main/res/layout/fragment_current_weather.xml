<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogspot.nipunswritings.lkweather.fragment.CurrentWeatherFragment"
    android:weightSum="2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/frag_curr_weath_temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="NA"
            android:textSize="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/frag_curr_weath_temp_tv"
            android:layout_toEndOf="@+id/frag_curr_weath_temp_tv"
            android:layout_alignTop="@+id/frag_curr_weath_temp_tv"
            android:layout_alignBottom="@+id/frag_curr_weath_temp_tv"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="0dp"
            android:text="&#x2103;"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/frag_curr_weath_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="NA"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/frag_curr_humid_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/frag_curr_humid_val_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/frag_curr_humid_tv"
                android:layout_toRightOf="@+id/frag_curr_humid_tv"
                android:layout_centerVertical="true"
                android:text="NA" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/frag_curr_press_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/frag_curr_press_val_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/frag_curr_press_tv"
                android:layout_toRightOf="@+id/frag_curr_press_tv"
                android:layout_centerVertical="true"
                android:text="NA" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/frag_curr_wind_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Wind"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/frag_curr_wind_val_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/frag_curr_wind_tv"
                android:layout_toRightOf="@+id/frag_curr_wind_tv"
                android:layout_centerVertical="true"
                android:text="NA" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
