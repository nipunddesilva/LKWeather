<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp">
    
    <TextView
        android:id="@+id/wea_forc_item_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/wea_forc_item_temp_rl"
        android:layout_width="65dp"
        android:layout_height="100dp"
        android:layout_below="@+id/wea_forc_item_time_tv" >

        <TextView
            android:id="@+id/wea_forc_item_temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="NA"
            android:textSize="35dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="&#x2103;"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/wea_forc_item_temp_tv"
            android:layout_toEndOf="@+id/wea_forc_item_temp_tv"
            android:layout_alignTop="@+id/wea_forc_item_temp_tv"
            android:layout_marginTop="19dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/wea_forc_item_desc_tv"
        android:layout_toRightOf="@+id/wea_forc_item_temp_rl"
        android:layout_toEndOf="@+id/wea_forc_item_temp_rl"
        android:layout_alignTop="@+id/wea_forc_item_temp_rl"
        android:layout_alignBottom="@+id/wea_forc_item_temp_rl"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:orientation="vertical"
        android:weightSum="3"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/wea_forc_item_humid_lbl_tv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/wea_forc_item_humid_val_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/wea_forc_item_humid_lbl_tv"
                android:layout_toRightOf="@+id/wea_forc_item_humid_lbl_tv"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/wea_forc_item_press_lbl_tv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Pressue"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/wea_forc_item_press_val_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/wea_forc_item_press_lbl_tv"
                android:layout_toRightOf="@+id/wea_forc_item_press_lbl_tv"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/wea_forc_item_wind_lbl_tv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Wind"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/wea_forc_item_wind_val_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/wea_forc_item_wind_lbl_tv"
                android:layout_toRightOf="@+id/wea_forc_item_wind_lbl_tv"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/wea_forc_item_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wea_forc_item_temp_rl"
        android:text="Scattered Cloud"
        android:textStyle="bold"/>

</RelativeLayout>